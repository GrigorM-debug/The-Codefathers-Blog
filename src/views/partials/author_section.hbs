<div class="widget widget-author">
  <div class="widget-title">
    <h3>Author</h3>
  </div>
  <div class="widget-body align-items-center">
    <div class="media">
      <div class="avatar">
        <a href="/profile/{{this._id}}">
          <img src={{this.imageUrl}} alt="Author profile pic" />
        </a>
      </div>
      <div class="media-body">
        <h6>Hello, I'm {{this.username}}</h6>
      </div>
    </div>
    <p><strong>Joined On:</strong> {{this.createdAt}}</p>
    <p><strong>Description:</strong> {{this.description}}</p>
  </div>
</div>