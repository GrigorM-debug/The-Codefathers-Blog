<section class="content-item" id="comments">
  <div class="container">
    <div class="row">
      <div class="col-sm-8">
        <h3>{{this.post.commentCount}} Comments</h3>
        <!-- COMMENT 1 - START -->
        {{#if this.post.comments}}
          {{#each this.post.comments}}
            <div class="media">
              <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex">
                  <a class="pull-left" href="#"><img
                      class="media-object"
                      src={{this.author.imageUrl}}
                      alt=""
                      style="border-radius: 50%;"
                    /></a>
                  <h4 class="media-heading">User: {{this.author.username}}</h4>
                </div>
                <div class="d-flex justify-content-between align-items-center">

                  {{#if this.isUserPostCommentAuthor}}
                    <form action="" method="post">
                      <button type="button" class="btn btn-success"><i
                          class="fa-solid fa-pen-to-square"
                        ></i></button>
                    </form>

                    <form action="" method="post">
                      <button type="button" class="btn btn-danger"><i
                          class="fa-solid fa-trash"
                        ></i></button>
                    </form>
                  {{/if}}
                </div>
              </div>
              <div class="media-body">
                <p class="htmlcode">{{{this.content}}}</p>
                <ul class="list-unstyled list-inline media-detail pull-left">
                  <li><i class="fa fa-calendar"></i> {{this.createdAt}}</li>
                  {{! <li><i class="fa fa-thumbs-up"></i>13</li> }}
                </ul>
                {{! <ul class="list-unstyled list-inline media-detail pull-right">
                  <li class=""><a href="">Like</a></li>
                  <li class=""><a href="">Reply</a></li>
                </ul> }}
              </div>
            </div>
          {{/each}}
        {{else}}
          <h3>No comments</h3>
        {{/if}}
        <!-- COMMENT 1 - END -->
      </div>
    </div>
  </div>
</section>