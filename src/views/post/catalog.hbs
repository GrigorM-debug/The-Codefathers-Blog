<div class="container">
  <div class="row mt-n5">
    {{#if posts}}
      {{#each posts}}
        <div
          class="col-md-6 col-lg-4 mt-5 wow fadeInUp"
          data-wow-delay=".2s"
          style="visibility: visible; animation-delay: 0.2s; animation-name: fadeInUp;"
        >
          <div class="blog-grid">
            <div class="blog-grid-img position-relative"><img
                alt="Post Banner Image"
                src="{{bannnerImageUrl}}"
              /></div>
            <div class="blog-grid-text p-4">
              <h3 class="h4 mb-3 text-center"><a
                  href="/post/details/{{_id}}"
                  class="text-success text-center"
                >{{title}}</a></h3>
              <div class="meta meta-style2">
                <ul>
                  <li>
                    <a href="#!" class="text-decoration-none text-dark"><i
                        class="fas fa-calendar-alt"
                      ></i>
                      {{createdAt}}
                    </a></li>
                  <li><a href="#!" class="text-dark text-decoration-none"><i
                        class="fas fa-user text-dark"
                      ></i>
                      Author:
                      {{author.username}}</a></li>
                  <li><a href="#!" class="text-dark text-decoration-none"><i
                        class="fas fa-comments"
                      ></i>
                      {{commentCount}}</a></li>
                  <li><a href="#!" class="text-dark text-decoration-none"><i
                        class="fa-solid fa-thumbs-up"
                      ></i>
                      {{likeCount}}</a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    {{else}}
      <h2>No posts added</h2>
    {{/if}}
  </div>
  {{! Pagination }}
  <div
    class="row mt-6 wow fadeInUp"
    data-wow-delay=".6s"
    style="visibility: visible; animation-delay: 0.6s; animation-name: fadeInUp;"
  >
    <div class="col-12">
      <div class="pagination text-small text-uppercase text-extra-dark-gray">
        <ul>
          <li><a href="#!"><i
                class="fas fa-long-arrow-alt-left me-1 d-none d-sm-inline-block"
              ></i>
              Prev</a></li>
          <li class="active"><a href="#!">1</a></li>
          <li><a href="#!">2</a></li>
          <li><a href="#!">3</a></li>
          <li><a href="#!">Next
              <i
                class="fas fa-long-arrow-alt-right ms-1 d-none d-sm-inline-block"
              ></i></a></li>
        </ul>
      </div>
    </div>
  </div>
</div>