<div class="blog-single gray-bg">
  <div class="container">
    <div class="row align-items-start">
      <div class="col-lg-8 m-15px-tb">
        <article class="article">
          <div class="article-img">
            <img src={{post.bannnerImageUrl}} alt="Post banner image" />
          </div>
          <div class="article-title">
            <h2>{{post.title}}</h2>
            <div class="media">
              <div class="media-body">
                <div class="avatar">
                  <img src={{post.author.imageUrl}} alt="Aythor profile pic" />
                </div>
                <div>
                  <label>{{post.author.username}}</label>
                  <span>{{post.createdAt}}</span>
                  <ul class="statistic">
                    <li>
                      <a href="" class="text-dark text-decoration-none"><i
                          class="fa-solid fa-comment"
                        ></i>
                        {{post.commentCount}}
                      </a>
                    </li>
                    <li>
                      <a href="" class="text-dark text-decoration-none"><i
                          class="fa-solid fa-thumbs-up"
                        ></i>
                        {{post.likeCount}}
                      </a>
                    </li>
                  </ul>
                </div>
              </div>
              {{#if isAuthenticated}}
                {{#if isUserPostCreater}}
                  <div class="author-action">
                    <a
                      href="/post/edit/{{post._id}}"
                      class="btn btn-success"
                    >Edit</a>
                    <a
                      href="/post/delete/{{post._id}}"
                      class="btn btn-danger"
                    >Delete</a>
                  </div>
                  {{else}}
                    <a href="" ><i class="fa-regular fa-heart fa-4x" <i class="fa-regular fa-heart" style="color: #ff0000;"></i></i></a>
                {{/if}}
              {{/if}}
            </div>
          </div>
          <div class="article-content">
            <p class="htmlcode">{{{post.content}}}</p>
          </div>
        </article>
        <!-- Comment Section -->
        {{> comments_section post}}
        <!-- Comment Section End -->
        {{! Leave comment section }}
        {{#if isAuthenticated}}
          {{> leave_comment post._id}}
        {{/if}}
        {{! End Leave comment section }}
      </div>
      <div class="col-lg-4 m-15px-tb blog-aside">
        <!-- Author -->
        {{> author_section post.author}}
        <!-- End Author -->
        <!-- Author Latest Post -->
        {{> author_posts this}}
        <!-- End Latest Post -->
      </div>
    </div>
  </div>
</div>