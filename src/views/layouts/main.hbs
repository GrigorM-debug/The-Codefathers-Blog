<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>The CodeFathers Blog</title>
    <link rel="icon" type="image/x-icon" href="/images/logo.png">
    <link rel="shortcut icon" type="image/x-icon" href="/images/logo.png">
    <link type="text/css" rel="stylesheet" href="/style.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script
      type="text/javascript"
      src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js">
    </script>
    <link
      rel="stylesheet"
      href="https://unpkg.com/jodit@4.0.1/es2021/jodit.min.css"
    />
    <script src="https://unpkg.com/jodit@4.0.1/es2021/jodit.min.js"></script>
  </head>
  <body>
    {{!-- Back to top button --}}
    {{!-- <a href="#">
      <div id="btn-back-to-top">
        <i class="fa-solid fa-arrow-up"></i>
      </div>
    </a> --}}
    <button type="button" id="btn-back-to-top" class="btn btn-success btn-floating btn-lg">
      <i class="fa-solid fa-arrow-up"></i>
    </button>

    <div class="d-flex flex-column min-vh-100">
      <header>
        {{> nav}}
      </header>

      <main class="flex-grow-1">
        {{#if errors}}
          <div class="toast-container position-fixed top-0 end-0 p-3">
            {{#each errors}}
              <div class="toast align-items-center text-white bg-danger border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                  <div class="toast-body">
                    {{this.msg}}
                  </div>
                  <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
              </div>
            {{/each}}
          </div>
        {{/if}}

        {{#if success}}
          <div class="toast-container position-fixed top-0 end-0 p-3">
            <div class="toast align-items-center text-white bg-success border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                  <div class="toast-body">
                    {{this.success.msg}}
                  </div>
                  <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
              </div>
          </div>
        {{/if}}


        {{{body}}}

      </main>

      <footer class="bg-body-tertiary text-center text-lg-start mt-auto">
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.05);">
            Â© 2025 Copyright:
            <a class="text-body" href="/">The CodeFathers Blog</a>
        </div>
      </footer>
    </div>
  </body>
    <script>
      //{{!-- Toast Messages --}}
      document.addEventListener("DOMContentLoaded", function () {
        let toastElements = document.querySelectorAll(".toast");
        toastElements.forEach((toastEl) => {
          new bootstrap.Toast(toastEl).show();
        });
      });

      //Back To Top Buttton
      document.addEventListener('DOMContentLoaded', () => {
        const backToTopButton = document.getElementById('btn-back-to-top')

        console.log('backToTopButton is', backToTopButton);

        window.addEventListener('scroll', scrollFunction);

        function scrollFunction() {
          console.log('scroll y =', document.documentElement.scrollTop);
          if (
            window.scrollY > 20
          ) {
            backToTopButton.style.display = "block";
          } else {
            backToTopButton.style.display = "none";
          }
        }
        // When the user clicks on the button, scroll to the top of the document
        backToTopButton.addEventListener("click", backToTop);

        function backToTop() {
          document.body.scrollTop = 0;
          document.documentElement.scrollTop = 0;
        }
      })
      
      //{{!-- Jodit editor --}}
      const editor = Jodit.make("#editor", {
        readonly: false,
        height: 400,
        toolbarButtonSize: 'middle',
        uploader: {
          insertImageAsBase64URI: true,
        },
        buttons: [...Jodit.defaultOptions.buttons]
      });
    </script>
</html>